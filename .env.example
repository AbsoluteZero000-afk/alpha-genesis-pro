# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/alpha_genesis
REDIS_URL=redis://localhost:6379/0

# API Keys (Encrypted in production)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use https://api.alpaca.markets for live

# Binance API (if using)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true  # Set to false for live trading

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here

# Monitoring
PROMETHEUS_PORT=8000
LOG_LEVEL=INFO

# Trading Configuration
MAX_PORTFOLIO_RISK=0.02  # 2% max risk per trade
MAX_DAILY_DRAWDOWN=0.05  # 5% max daily drawdown
DEFAULT_POSITION_SIZE=0.01  # 1% of portfolio per position

# Notification Settings
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_here

# Environment
ENVIRONMENT=development  # development, staging, production